<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>COZYTRIP</display-name>
  <servlet>
    <servlet-name>DispatcherServlet</servlet-name>
    <servlet-class>kr.controller.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>propertiesPath</param-name>
      <param-value>/WEB-INF/hs.properties,/WEB-INF/sh.properties,/WEB-INF/yn.properties,/WEB-INF/jm.properties</param-value>
    </init-param>
    <init-param>
      <param-name>viewPath</param-name>
      <param-value>/WEB-INF/views/</param-value>
    </init-param>
    <multipart-config>
      <max-file-size>5242880</max-file-size>
      <max-request-size>52428800</max-request-size>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
 
  
  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>/adminAccomStatusUpdate.do</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>/adminAccomDelete.do</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>/adminAccomDetail.do</url-pattern>
  </servlet-mapping>
  
  <context-param>
    <param-name>jakarta.websocket.server.serverContainer</param-name>
    <param-value>org.apache.tomcat.websocket.server.WsServerContainer</param-value>
  </context-param>
  
  <!-- 웹소켓 설정 리스너 등록 -->
  <listener>
    <listener-class>kr.util.WebSocketConfig</listener-class>
  </listener>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
</web-app>